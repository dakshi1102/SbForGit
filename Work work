‚≠ê PART 7 ‚Äî TRANSFER

üìÑ src/pages/Transfer.jsx

import React, { useState } from "react";
import axios from "../api/axios";

export default function Transfer() {
  const id = localStorage.getItem("customerId");
  const [toAcc, setToAcc] = useState("");
  const [amount, setAmount] = useState("");

  async function submit() {
    await axios.post(`/api/customers/${id}/transfer`, {
      toAccount: toAcc,
      amount,
    });
    alert("Transfer successful");
  }

  return (
    <div style={{ padding: 30 }}>
      <h2>Transfer Money</h2>
      <input placeholder="Receiver Account No" onChange={(e) => setToAcc(e.target.value)} /><br /><br />
      <input placeholder="Amount" onChange={(e) => setAmount(e.target.value)} /><br /><br />
      <button onClick={submit}>Submit</button>
    </div>
  );
}


