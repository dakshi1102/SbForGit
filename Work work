‚≠ê PART 3 ‚Äî CUSTOMER DASHBOARD

üìÑ src/pages/Customer_Dashboard.jsx

import React, { useEffect, useState } from "react";
import axios from "../api/axios";
import { useNavigate } from "react-router-dom";

export default function Customer_Dashboard() {
  const navigate = useNavigate();
  const id = localStorage.getItem("customerId");

  const [customer, setCustomer] = useState(null);

  useEffect(() => {
    load();
  }, []);

  async function load() {
    const res = await axios.get(`/api/customers/${id}`);
    setCustomer(res.data);
  }

  if (!customer) return <p>Loading...</p>;

  const btn = {
    padding: "10px 16px",
    background: "#007bff",
    color: "#fff",
    border: "none",
    borderRadius: 5,
    cursor: "pointer",
    fontWeight: "bold",
  };

  const card = {
    background: "#fff",
    padding: 20,
    borderRadius: 8,
    width: 500,
    margin: "40px auto",
    boxShadow: "0 4px 10px rgba(0,0,0,0.1)",
  };

  return (
    <div style={{ background: "#f8f9fa", height: "100vh", paddingTop: 40 }}>
      <div style={card}>
        <h2>Customer Dashboard</h2>
        <p><b>Account No:</b> {customer.accountNo}</p>
        <p><b>Balance:</b> ‚Çπ{customer.balance}</p>

        <div style={{ display: "flex", gap: 10, flexWrap: "wrap", marginTop: 20 }}>
          <button style={btn} onClick={() => navigate("/customer/mini")}>Mini Statement</button>
          <button style={btn} onClick={() => navigate("/customer/statement")}>Account Statement</button>
          <button style={btn} onClick={() => navigate("/customer/deposit")}>Deposit</button>
          <button style={btn} onClick={() => navigate("/customer/withdraw")}>Withdraw</button>
          <button style={btn} onClick={() => navigate("/customer/transfer")}>Transfer</button>
          <button style={btn} onClick={() => navigate("/customer/profile")}>Profile</button>
        </div>

        <button style={{ ...btn, background: "#dc3545", marginTop: 20 }} onClick={() => {
          localStorage.clear();
          navigate("/customer/login");
        }}>
          Logout
        </button>
      </div>
    </div>
  );
}


